<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp">
        <TextView
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/material_icons"
            android:text="\ue5e0"
            android:textColor="#FFEB3B"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Đăng xuất"
            android:textSize="14sp"
            android:gravity="end"
            android:id="@+id/btnLogOut"
            android:textColor="?attr/colorPrimary"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20sp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:layout_gravity="center"
            android:src="@drawable/user_img"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Anh Khoa"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:id="@+id/tvName"
            android:textColor="?attr/colorPrimary"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="khoaanh662004@gmail.com"
            android:gravity="center"
            android:textSize="15sp"
            android:id="@+id/tvEmail"
            android:textColor="?attr/colorPrimary"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="30sp"
        android:paddingEnd="30sp"
        android:layout_marginBottom="20sp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tài khoản"
            android:layout_marginBottom="5sp"
            />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:id="@+id/lrAccount">

           <ImageView
               android:layout_width="25sp"
               android:layout_height="25sp"
               android:padding="5sp"
               android:src="@drawable/ic_person_edit"
               android:background="@drawable/border_background"
               android:layout_marginEnd="10sp"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Tài khoản: "
               android:textStyle="bold"
               android:layout_marginEnd="20sp"
               android:layout_gravity="center_vertical"
               android:textColor="?attr/colorPrimary"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Anh Khoa"
               android:layout_weight="1"
               android:gravity="end"
               android:layout_gravity="center_vertical"
               android:id="@+id/tvName2"
               android:textColor="?attr/colorPrimary"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="5dp"
               android:layout_marginEnd="10sp"
               android:fontFamily="@font/material_icons"
               android:text="\ue5e1"
               android:textColor="?attr/colorPrimary"
               android:textSize="12sp"
               android:textStyle="bold"
               android:layout_gravity="center_vertical"/>

       </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="30sp"
        android:paddingEnd="30sp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hệ thống"
            android:layout_marginBottom="10sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15sp">
            <ImageView
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:padding="5sp"
                android:layout_marginEnd="10sp"
                android:src="@drawable/ic_translate"
                android:background="@drawable/border_background"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngôn ngữ"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:layout_weight="1"
                />
            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:background="@drawable/border_toggle"
                android:layout_gravity="center_vertical"
                android:id="@+id/btnLanguageWrap"
                >
                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:orientation="vertical"
                    android:background="@drawable/border_toggle_background_white"
                    android:id="@+id/btnLanguage"
                    >
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15sp">
            <ImageView
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:padding="5sp"
                android:layout_marginEnd="10sp"
                android:src="@drawable/ic_notifications"
                android:background="@drawable/border_background"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông báo"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:layout_weight="1"
                />

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:background="@drawable/border_toggle"
                android:layout_gravity="center_vertical"
                android:id="@+id/btnNotiWrap"
                >
                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:orientation="vertical"
                    android:background="@drawable/border_toggle_background_white"
                    android:id="@+id/btnNoti"
                    >

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15sp">
            <ImageView
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:padding="5sp"
                android:layout_marginEnd="10sp"
                android:src="@drawable/ic_palette"
                android:background="@drawable/border_background"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chủ đề"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="?attr/colorPrimary"
                />
            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:background="@drawable/border_toggle"
                android:layout_gravity="center_vertical"
                android:id="@+id/btnThemeWrap"
                >
                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:orientation="vertical"
                    android:background="@drawable/border_toggle_background_white"
                    android:id="@+id/btnTheme"
                    >
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>