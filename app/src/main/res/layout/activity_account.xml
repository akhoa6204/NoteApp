<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp">
        <TextView
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/material_icons"
            android:text="\ue5e0"
            android:textColor="#FFEB3B"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:gravity="end"
            android:id="@+id/btnLogOut"
            android:textColor="?attr/colorPrimary"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20sp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="85sp"
                android:layout_height="85sp"
                android:layout_centerInParent="true">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivImgUser"
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:src="@drawable/user" />
                <TextView
                    android:id="@+id/btnEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:fontFamily="@font/material_icons"
                    android:text="\ue3c9"
                    android:textColor="#FFEB3B"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </FrameLayout>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:id="@+id/tvName"
            android:textColor="?attr/colorPrimary"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15sp"
            android:id="@+id/tvEmail"
            android:textColor="?attr/colorPrimary"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="30sp"
        android:paddingEnd="30sp"
        android:layout_marginBottom="20sp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/account"
            android:layout_marginBottom="5sp"
            android:textColor="?attr/colorPrimary"
            />
        <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:id="@+id/lrAccount"
           android:layout_marginBottom="10dp"
            android:background="@color/white">

           <ImageView
               android:layout_width="25sp"
               android:layout_height="25sp"
               android:padding="5sp"
               android:src="@drawable/ic_person_edit"
               android:background="@drawable/border_background"
               android:layout_marginEnd="10sp"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textStyle="bold"
               android:layout_marginEnd="20sp"
               android:layout_gravity="center_vertical"
               android:textColor="?attr/colorPrimary"
               android:id="@+id/tvAccount"/>
           <TextView
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:gravity="end"
               android:layout_gravity="center_vertical"
               android:id="@+id/tvName2"
               android:textColor="?attr/colorPrimary"/>
       </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/lrPassword"
            android:background="@color/white">
            <TextView
                android:padding="5sp"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:fontFamily="@font/material_icons"
                android:text="\ue897"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:background="@drawable/border_background"
                android:gravity="center"
                android:layout_marginEnd="10sp"
                />

            <TextView
                android:id="@+id/tvPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="20sp"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_gravity="center_vertical"
                android:id="@+id/tvChangePassword"
                android:textColor="?attr/colorPrimary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10sp"
                android:fontFamily="@font/material_icons"
                android:text="\ue5e1"
                android:textColor="?attr/colorPrimary"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="30sp"
        android:paddingEnd="30sp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/system"
            android:layout_marginBottom="10sp"
            android:textColor="?attr/colorPrimary"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15sp"
            android:background="@color/white">
            <ImageView
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:padding="5sp"
                android:layout_marginEnd="10sp"
                android:src="@drawable/ic_translate"
                android:background="@drawable/border_background"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:layout_weight="1"
                android:id="@+id/tvLanguageLogo"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="?attr/colorPrimary"
                android:layout_marginEnd="10dp"
                android:id="@+id/tvLanguage"
                />
            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:background="@drawable/border_toggle"
                android:layout_gravity="center_vertical"
                android:id="@+id/btnLanguageWrap"
                >
                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:orientation="vertical"
                    android:background="@drawable/border_toggle_background_white"
                    android:id="@+id/btnLanguage"
                    >
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15sp"
            android:background="@color/white">
            <ImageView
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:padding="5sp"
                android:layout_marginEnd="10sp"
                android:src="@drawable/ic_palette"
                android:background="@drawable/border_background"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:id="@+id/tvThemeLogo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="?attr/colorPrimary"
                android:layout_marginEnd="10dp"
                android:id="@+id/tvTheme"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>